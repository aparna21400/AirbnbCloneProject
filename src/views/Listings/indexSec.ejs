<% layout('layouts/boilerplate') -%>
    <%=success %>

        <style>
            #filters {
                display: flex;
                flex-wrap: wrap;
                align-items: center;
                padding: 1rem;
            }

            .filter {
                text-align: center;
                margin-right: 2rem;
                margin-top: 1rem;
                opacity: 0.7;
                text-decoration: none;
                color: inherit;
            }

            .filter:hover {
                opacity: 1;
                cursor: pointer;
            }

            .filter p {
                font-size: 0.8rem;
                margin-top: 0.5rem;
            }

            .tax-toggle {
                margin-left: auto;
                margin-top: 1rem;
            }

            .tax-info {
                display: none;
            }

            .tax-toggle {
                border: 1px solid black;
                border-radius: 1rem;
                height: 3.25rem;
                padding: 1rem;
                margin-left: 5rem;
                display: flex;
                align-items: center;
            }
        </style>

        <body class="card" style="font-family: 'Segoe UI', sans-serif;">

            <div id="filters">
                <!-- Filters -->
                <a href="/listings" class="filter">
                    <div><i class="fa-solid fa-fire"></i></div>
                    <p>Trending</p>
                </a>

                <a href="/listings/category/Rooms" class="filter">
                    <div><i class="fa-solid fa-bed"></i></div>
                    <p>Rooms</p>
                </a>

                <a href="/listings/category/Mountains" class="filter">
                    <div><i class="fa-solid fa-mountain"></i></div>
                    <p>Mountains</p>
                </a>

                <a href="/listings/category/Beach" class="filter">
                    <div><i class="fa-solid fa-umbrella-beach"></i></div>
                    <p>Beach</p>
                </a>

                <a href="/listings/category/Iconic cities" class="filter">
                    <div><i class="fa-solid fa-mountain-city"></i></div>
                    <p>Iconic cities</p>
                </a>

                <a href="/listings/category/Castles" class="filter">
                    <div><i class="fa-brands fa-fort-awesome"></i></div>
                    <p>Castles</p>
                </a>

                <a href="/listings/category/Camping" class="filter">
                    <div><i class="fa-solid fa-campground"></i></div>
                    <p>Camping</p>
                </a>

                <a href="/listings/category/Farms" class="filter">
                    <div><i class="fa-solid fa-tractor"></i></div>
                    <p>Farms</p>
                </a>

                <a href="/listings/category/Lounge" class="filter">
                    <div><i class="fa-solid fa-wine-glass"></i></div>
                    <p>Lounge</p>
                </a>

                <a href="/listings/category/Arctic" class="filter">
                    <div><i class="fa-solid fa-person-snowboarding"></i></div>
                    <p>Arctic</p>
                </a>

                <a href="/listings/category/Pools" class="filter">
                    <div><i class="fa-solid fa-person-swimming"></i></div>
                    <p>Pools</p>
                </a>

                <!-- Tax Toggle -->
                <div class="tax-toggle">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            Display total before taxes
                        </label>
                    </div>
                </div>
            </div>

            <!-- Listings Cards -->
            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
                <% for(let listing of AllListing){ %>
                    <a href="/listings/<%=listing._id%>" class="listing-link" style="text-decoration: none;">
                        <div class="card col"
                            style="width: 20rem; border: none !important; margin: 2rem !important; padding: 0 !important;">
                            <img src="<%= listing.image?.url || listing.image || '/default.jpg' %>" class="card-img-top"
                                alt="listing_image"
                                style="border-radius: 1rem; width: 100%; object-fit: cover; height: 20rem;">

                            <div class="card-body" style="padding: 0;">
                                <h5 class="card-title">
                                    <b>
                                        <%=listing.title%>
                                    </b>
                                </h5>
                                <p class="card-text" style="font-weight: 400 !important;">
                                    <%=listing.description%>
                                </p>
                                <p class="listing-price"
                                    style="font-weight: 500; border-radius: 3px; width: 8rem; background-color: rgb(58, 143, 227); padding:5px 10px;">
                                    &#8377;<%= listing.price.toLocaleString('en-IN') %> / night
                                        <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
                                </p>
                            </div>
                        </div>
                    </a>
                    <% } %>
            </div>

            <script>
                document.addEventListener('DOMContentLoaded', () => {
                    let priceToggle = document.getElementById("flexSwitchCheckDefault");

                    if (priceToggle) {
                        priceToggle.addEventListener("click", () => {
                            let taxInfo = document.getElementsByClassName("tax-info");
                            for (info of taxInfo) {
                                if (info.style.display != "inline") {
                                    info.style.display = "inline"
                                } else {
                                    info.style.display = "none"

                                }


                            }
                        });
                    }
                });
            </script>
        </body>